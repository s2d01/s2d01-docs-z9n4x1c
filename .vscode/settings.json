{
  "files.associations": { "mkdocs.yml": "yaml" },

  "files.exclude": { "site/": true },
  "search.exclude": { "site/**": true },
  "files.watcherExclude": { "**/site/**": true },

  "editor.wordWrap": "on",
  "editor.tabSize": 2,
  "editor.renderWhitespace": "selection",
  "editor.wordWrapColumn": 100,

  "editor.snippetSuggestions": "top",
  "editor.tabCompletion": "on",
  "editor.suggest.showSnippets": true,

  "markdown.preview.breaks": true,
  "markdown.validate.enabled": true,
  "markdown.extension.tableFormatter.enabled": true,

  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.renderWhitespace": "selection",
    "editor.tabCompletion": "on"
  },
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },

  "markdownlint.config": { "MD041": false, "MD033": false, "MD013": false },

  "pasteImage.path": "${projectRoot}/docs/assets/images",
  "pasteImage.basePath": "${projectRoot}/docs",
  "pasteImage.forceUnixStyleSeparator": true,
  "pasteImage.insertPattern": "![${imageFileName}](${imageFilePath})",

  "cSpell.language": "it,en",
  "cSpell.words": ["MkDocs","mkdocs","gh-pages","Material","noindex","Disallow","YAML","workflow","sitemap","Obsidian","Eno","trip-hop","SD3"],

  "yaml.validate": true,
  "yaml.format.enable": true,
  "yaml.customTags": [],

  "github.copilot.enable": { "*": false, "markdown": true, "yaml": true },

  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false
}
